---
import "@styles/objects/_sidebar.scss";
import "@styles/objects/_publication.scss";

import BaseLayout from "../layouts/Layout.astro";

const { seo, contentModifierClass, chapterThemeClass } = Astro.props;

const modifierClass = `o-content--${contentModifierClass}`;
const themeClass = `o-content--chapter-${chapterThemeClass}`;
---

<BaseLayout seo={seo}>
  <div class:list={["o-content", modifierClass, themeClass]}>
    <main class="o-publication">
      <article>
        <slot />
      </article>
    </main>
    <aside class="o-sidebar">
      <slot name="sidebar" />
    </aside>
  </div>
</BaseLayout>
