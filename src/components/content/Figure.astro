---
import { Img } from "astro-imagetools/components";

interface Figure {
  src: string;
  alt?: string;
  caption?: string;
  showCc?: boolean;
}

const { src, alt, caption, showCc = true } = Astro.props as Figure;
---

<figure class="c-figure">
  <Img
    src={src}
    alt={alt ?? ""}
    loading="lazy"
    attributes={{
      img: {
        class: "c-figure__image",
      },
    }}
  />
  <figcaption class="c-figure__caption">
    {showCc && "CC BY "}{caption}
  </figcaption>
</figure>
