---
import "@styles/components/_blockquote.scss";

interface Blockquote {
  cite?: string;
  refNumber?: number;
  isFullWidth?: boolean;
}

const { cite, refNumber, isFullWidth } = Astro.props as Blockquote;
---

<blockquote
  cite={cite}
  class=`c-blockquote ${isFullWidth ? 'is-full-width' : ''}`
>
  {
    refNumber && (
      <a href={cite} class="c-bockquote__ref-link">
        <sup class="c-blockquote__ref-number">{refNumber}</sup>
      </a>
    )
  }
  <i class="c-blockquote__content">
    <slot />
  </i>
</blockquote>
