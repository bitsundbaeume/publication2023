---
import "@styles/components/_author.scss";

interface AstroProps {
  authors: string[];
  showSimple: boolean;
}

const { authors, showSimple = false } = Astro.props as AstroProps;

const authorText = authors?.join(", ").replace(/,([^,]*)$/, " &$1");
---

<div class=`c-author ${showSimple ?? 'is-intro'}`>
  {
    !showSimple && (
      <span class="c-author__label">
        {authors?.length === 1 ? "Author " : "Authors "}
      </span>
    )
  }

  <i class="c-author__authors">{authorText}</i>
</div>
