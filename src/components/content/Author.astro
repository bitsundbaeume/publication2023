---
interface AstroProps {
  authors: string[];
}

const { authors } = Astro.props as AstroProps;

const authorText = authors?.join(" & ");
---

<div class="c-author">
  <span class="c-author__label">
    {
      authors?.length === 1 ? "Author" : "Authors"
    }
  </span>&nbsp;
  <i class="c-author__authors">{ authorText }</i>
</div>
