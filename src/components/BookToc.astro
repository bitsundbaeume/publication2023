---
import "@styles/components/_book-toc.scss";

export interface Props {
  toc: [
    {
      title: string;
      url: string;
      pageNumber?: number;
    }
  ];
}

const { toc } = Astro.props;
---

<section class="c-book-toc" id="toc">
  <h2 class="c-book-toc__headline">Table of Contents</h2>
  <nav class="c-book-toc__nav">
    <ol class="c-book-toc__menu">
      {
        toc.map((item) => (
          <li class="c-book-toc__menu-item">
            <a href={item.url} class="c-book-toc__menu-link">
              <span class="c-book-toc__title">{item.title}</span>
              {item.pageNumber && (
                <span class="c-book-toc__page-number">{item.pageNumber}</span>
              )}
            </a>
          </li>
        ))
      }
    </ol>
  </nav>
  <img
    src="images/pixels/pixel-box-img.svg"
    alt="Pixel"
    loading="lazy"
    decoding="async"
    class="c-book-toc__pixel"
  />
</section>
