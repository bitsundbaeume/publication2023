---
import { Image } from "astro:assets";
import type { Logo } from "@components/footer/types";
import { extensionIs } from "@lib/helper";

export interface Props {
  logos: Logo[];
  classModifier?: string;
}

const { logos, classModifier } = Astro.props;
---

<div class={`o-footer__logo-grid o-footer--${classModifier}`}>
  {
    logos.map((logo: Logo) => (
      <a
        href={logo.url}
        target="_blank"
        rel="noopener"
        class="o-footer__logo-grid-item"
        title={logo.name}
      >
        {extensionIs(logo.logo) === "svg" ? (
          <img
            src={logo.logo}
            alt={logo.alt}
            loading="lazy"
            decoding="async"
            width={logo.width}
            height={logo.height}
          />
        ) : (
          <Image
            src={logo.logo}
            width={logo.width}
            height={logo.height}
            alt={logo.alt}
          />
        )}
      </a>
    ))
  }
</div>
